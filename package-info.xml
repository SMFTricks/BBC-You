<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>smftricks:bbcyou</id>
	<name>BBC You</name>
	<version>2.0.1</version>
	<type>modification</type>
	<install for="2.0.0 - 2.99.99">

		<!-- Mod Readme -->
		<readme parsebbc="true">readme.txt</readme>

		<!-- BBC Files -->
		<require-file name="BBC-You.php" destination="$sourcedir">Source file</require-file>

		<!-- Hooks -->
		<code>hooks.php</code>

		<!-- Modification -->
		<modification>install.xml</modification>

		<!-- Image -->
		<require-file name="you.gif" destination="$imagesdir/bbc" />

	</install>
	
	<uninstall for="2.0.0 - 2.99.99">

		<!-- Hooks Remove -->
		<code>remove.php</code>

		<!-- Source Files -->
		<remove-file name="$sourcedir/BBC-You.php">Source admin</remove-file>

		<!-- Modification -->
		<modification reverse="true">install.xml</modification>

		<!-- Image -->
		<remove-file name="$imagesdir/bbc/you.gif" />

	</uninstall>
	
</package-info>
